
# === FastAPI backend env (place this file at backend/app/.env) ===

# Postgres connection string
# Example:
# DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/repmeta
DATABASE_URL=postgresql://postgres:mysecretpassword@localhost:5433/postgres
# Schema
REPMETA_SCHEMA=repmeta

# CORS origins (comma-separated). Default: *
CORS_ORIGINS=http://localhost:5173

# Enforce that every "Server" in a QEM TSV must be present in the AemServers mapping.
# If true, /ingest-qem-file fails fast listing unmapped Server names.
# If false, best-effort fallback is allowed (use Server as host or create server).
REPMETA_REQUIRE_QEM_SERVER_MAP=true
